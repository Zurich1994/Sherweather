<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zz"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity5" >

    <TextView
        android:id="@+id/textView2"
         android:textColor="#7FFF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:text="今天："
        android:textAppearance="?android:attr/textAppearanceMedium" /> 

    <TextView
        android:id="@+id/textView3"
         android:textColor="#7FFF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="82dp"
        android:text="明天："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:src="@drawable/wea7" />

    <ImageView
        android:id="@+id/image_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_centerVertical="true"
        android:src="@drawable/wea6" />

    <TextView
        android:id="@+id/textView6"
         android:textColor="#7FFF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/image_2"
        android:text="天气 ：    多云转晴
                          气温：     15~6℃
                          空气指数：  良"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/image_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="17dp"
        android:src="@drawable/wea1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
         android:textColor="#7FFF00"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignTop="@+id/image_3"
        android:text="天气 ：    雷阵雨
                           气温：    12~2℃
                           空气指数：  良"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
         android:textColor="#7FFF00"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_2"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="14dp"
        android:text="后天："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_1"
        android:layout_marginLeft="46dp"
         android:textColor="#7FFF00"
        android:layout_toRightOf="@+id/image_1"
        android:text="天气 ：    晴
                            气温：    14~4℃
                           空气指数：  良"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="#7FFF00"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="沈阳的天气是："
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="更多城市" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/button1"
        android:text="沈阳天气实况" />

</RelativeLayout>
